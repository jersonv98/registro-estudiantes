@using Microsoft.AspNetCore.Identity
@using registroEstudiantes.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@model IEnumerable<registroEstudiantes.Models.Materias>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
@if (User.IsInRole("admin") || User.IsInRole("docente"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Materia
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nivel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nivel)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdMateria">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdMateria">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdMateria">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
